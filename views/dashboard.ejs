<!doctype html>

<head>
    <title>The Grove | Dashboard </title>
    <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css'>
    <link rel='icon' href='/img/favicon.ico'>
    <style>
        body {
            background-image: url(/img/bg.jpg);
            background-size: cover cover;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <br>
    <div class='row container-fluid'>
        <div class='col-md-5'>
            <div class='jumbotron' style='text-indent:25px;'>
                <h1><%= user.username %></h1>
                <p class='lead'>Your Race: <%= user.race %></p>
                <p class='lead'>Your Class: <%= user.class %></p>
                <p class='lead'>Your Map is: <%= user.map %></p>
                <a href='/play' class='btn btn-lg btn-block btn-success-outline'>Play</a>
                <a href='/logout' class='btn btn-lg btn-block btn-danger-outline'>Logout</a>
            </div>
            <hr>
            <h3> <%= user.inventory.join(', ') %> </h3>
        </div>
    </div>
</body>