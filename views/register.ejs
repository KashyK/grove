<body>
    <div class='container-fluid'>
        <span style='color:white;text-align:center;' id='error'></span>
    </div>
    <form method='post' action='/register' class='jumbotron' style='margin:100px;'>
        <div class='container-fluid'>
            <input name='username' placeholder='username' class='form-control'>
            <br>
            <input name='password' placeholder='password' type='password' class='form-control'>
            <br>
            <select name='race' class='form-control' style='width:49.5%;display:inline'>
                    <option value='human'>Human</option>
                    <option value='elf'>Elf</option>
                    <option value='dwarf'>Dwarf</option>
                    <option value='angel'>Angel</option>
                    <option value='vampire'>Vampire</option>
                    <option value='demon'>DÃ¦mon</option>
                </select>
            <select name='class' class='form-control' style='width:49.5%;display:inline'>
                    <option value='rogue'>Rogue</option>
                    <option value='mage'>Mage</option>
                    <option value='knight'>Knight</option>
                </select>
            <br>
            <br>
            <input name='type' type='hidden' value='register'>
            <input type='submit' class='btn btn-primary'>
            <br><br><p> Already have an account? <a href='/login'>Login</a> here!</p>
            <a href='/'>Home</a>
        </div>
    </form>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
    
    <script>
        function getParameterByName(name, url) {
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, "\\$&");
            var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, " "));
        }
        if (getParameterByName('err') == 'not_found') document.getElementById('error').innerHTML = '<h3>Error: User not found!</h3>';
        
    </script>

</body>

