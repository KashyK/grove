<!doctype html>
<html>

    <head>
        <title>The Grove | Login</title>
        <link rel='icon' href='/img/favicon.ico'>
        <link rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css'>
        <link rel='stylesheet' href='/css/login.css'>
    </head>

    <body>
        <form method='post' action='/login' class='jumbotron' style='margin:100px;'>
            <div class='container-fluid'>
                <span style='color:red;' id='error'>NOTE: All accounts have been deleted as of 12/21/2016!!!</span>
                <input name='username' placeholder='Username' class='form-control'>
                <br>
                <input name='password' placeholder='Password' type='password' class='form-control'>
                <br>
                <input name='type' type='hidden' value='login'>
                <input type='submit' class='btn btn-primary'>
                <br>
                <br><p>Don't have an account yet? <a href='/register'>Register</a> here!</p>
                <a href='/'>Home</a>
                <br>
                <br>
            </div>
        </form>
        <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
       
        <script>
            function gp(a, b) {
                if (!b) b = window.location.href;
                a = a.replace(/[\[\]]/g, "\\$&");
                var r = new RegExp("[?&]" + a + "(=([^&#]*)|&|#|$)"),
                    v = r.exec(b);
                if (!v) return null;
                if (!v[2]) return '';
                return decodeURIComponent(v[2].replace(/\+/g, " "));
            }
            if (gp('err') == 'not_found') document.getElementById('error').innerHTML = 'Error: User not found!';
        </script>
    </body>

</html>
